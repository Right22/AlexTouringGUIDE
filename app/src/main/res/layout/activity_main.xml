<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ekasilabalexcdtb.alextouringguide.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#A0DD0A"
        android:text="ALEX TOUR GUIDE" />

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#CC9"
        android:orientation="horizontal">

        <Button
            android:id="@+id/accomodation"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_weight="1"
            android:background="#00FF00"
            android:onClick="accomodation"
            android:text="Accomodation" />

        <Button
            android:id="@+id/activities"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/accomodation"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="#00FF00"
            android:onClick="activities"
            android:text="Activities" />

        <Button
            android:id="@+id/gallery"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/accomodation"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#00FF00"
            android:onClick="gallery"
            android:text="gallery" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignEnd="@+id/arts_and_crafts"
            android:layout_alignLeft="@+id/accomodation"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/arts_and_crafts"
            android:layout_alignStart="@+id/accomodation"
            android:layout_below="@+id/accomodation"
            android:weightSum="1">

            <ImageView
                android:id="@+id/gps"
                android:layout_width="match_parent"
                android:layout_height="258dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="false"
                android:layout_marginBottom="14dp"
                android:onClick="GPS"
                android:src="@drawable/map"
                android:layout_weight="1" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#CC9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/view_2"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:background="#00FFFF"
            android:text="EXTRAS" />

        <LinearLayout
            android:id="@+id/layout_3"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#555FFD"
            android:orientation="vertical">

            <Button
                android:id="@+id/view_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#00FF00"
                android:text="ARTS AND CRAFTS"
                android:onClick="arts_and_crafts"
                />

            <Button
                android:id="@+id/view_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#00FF00"
                android:text="FOOD AND DRINK"
                android:onClick="food_and_drink"/>
            <Button
                android:id="@+id/view_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#00FF00"
                android:text="SERVICES"
                android:onClick="services"/>

            <TextView
                android:id="@+id/view_6"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="#FF00FF" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
